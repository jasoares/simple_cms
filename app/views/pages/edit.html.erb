<% @page_title = "Edit Page" %>

<%= render(:partial => "shared/back") %>

<div class="page edit">
	<h2>Update Page</h2>

	<%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>
		
		<div class="form-buttons">
			<%= submit_tag("Update Page") %>
		</div>

	<% end %>
</div>