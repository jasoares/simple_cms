<% @page_title = "Show Section" %>

<%= render(:partial => "shared/back") %>

<div class="section show">

	<h2>Show Section</h2>
	<table summary="Section detail view">
		<tr>
			<th>ID</th>
			<td><%= @section.id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Belongs to</th>
			<td><%= @section.page_id? ? @section.page.name : 'none' %></td>
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= content_type @section %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= show_content @section %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @section.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></td>
		</tr>
	</table>

</div>