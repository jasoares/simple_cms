<% @page_title = "Sections List" %>

<div class="Sections list">
	<h2>Sections</h2>

	<%= link_to("<< Back to Pages List", {:controller => 'pages', :action => 'list'}, :class => 'back-link') %>

	<%= link_to("Add New Section", {:action => 'new'}, :class => 'action') %>

	<table class="listing" summary="Section list">
	<tr class="header">
		<th>ID</th>
		<th>Section</th>
		<th>Position</th>
		<th>Page</th>
		<th>Visible</th>
		<th>Content Type</th>
		<th>Content</th>
		<th>Actions</th>
	</tr>
	<% @sections.each do |section| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= section.id %></td>
			<td><%= section.name %></td>
			<td><%= section.position %></td>
			<td class="center"><%= section.page_id %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td><%= content_type(section) %></td>
			<td><%= show_content(section) %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => section.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => section.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => section.id}, :class => 'action delete') %>
			</td>
		</tr>
	<% end %>
	</table>
</div>